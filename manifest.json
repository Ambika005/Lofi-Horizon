{
  "manifest_version": 3,
  "name": "Lofi Horizon",
  "version": "1.0.0",
  "description": "A Lo-Fi music player extension with ambient video background",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["offscreen", "storage"],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "icons/cat_cursoricon.png", "offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
